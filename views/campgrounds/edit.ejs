<% layout('layouts/boilerplate.ejs') %>

<div class="row">
    <h1 class="text-center">Edit <%= camp.title %></h1>
    <div class="col-6 offset-3">
        <form action="/campgrounds" method="POST">
            <div class="mb-2">
                <label class="form-label" for="title">Title</label>
                <input class="form-control" type="text" id="title" name="campground[title]" value="<%= camp.title %>" placeholder="Name">
            </div>
            <div class="mb-2">
                <label class="form-label" for="location">Location</label>
                <input class="form-control" type="text" id="location" name="campground[location]" placeholder="City, State" value="<%= camp.location %>">
            </div>
            <div class="mb-2">
                <label class="form-label" for="image">Image Url</label>
                <input class="form-control" type="text" id="image" name="campground[image]" placeholder="www.example.com" value="<%= camp.image %>">
            </div>
            <div class="mb-2">
                <label class="form-label" for="price">Campground Price</label>
                <div class="input-group">
                    <span class="input-group-text" id="basic-addon1">$</span>
                    <input type="text" class="form-control" placeholder="0.00" aria-label="Username" name="campground[price]" value="<%= camp.price %>">
                </div>
            </div>
            <div class="mb-2">
                <label class="form-label" for="description">Description</label>
                <textarea class="form-control" type="text" id="description" name="campground[description]" placeholder="Describe your camp" ><%= camp.description %></textarea>
            </div>
    
            <div class="mb-2">
                <button class="btn btn-info">Update Camp</button>
            </div>

        </form>
        <footer>
            <a href="/campgrounds">Back</a>
        </footer>
    </div>
</div>