<% layout('layouts/boilerplate.ejs') %>

<h1 class="text-center mb-3">All Campgrounds</h1>

<div class="row row-cols-1 row-cols-md-2 g-3">
  <% for(let camp of campgrounds) {%>
    <div class="col">
      <div class="card shadow">
        <img class="card-img-top img-fluid" alt="" src="<%=camp.image%>" style="height: 400px; object-fit: cover;">
        <div class="card-body">
          <h5 class="card-title"><%= camp.title %></h5>
          <p class="card-text"><%= camp.description %></p>
          <p class="card-text">
            <small class="text-muted"><%= camp.location %></small>
          </p>
          <p class="card-text">
            <small class="text-muted">$ <%= camp.price %>/night</small>
          </p>
          <a href="/campgrounds/<%=camp._id%>" class="btn btn-primary">View <%= camp.title %></a>
        </div>
      </div>
    </div>
  <% } %>
</div>
